<%= form_with(model: @book, local: true) do |form| %>

<div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
</div>

<div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
</div>

<div class="field">
    <%= form.label :bookImage %>
    <%= form.file_field :bookImage %>
</div>

<div class="actions">
    <%= form.submit %>
</div>

<% end %>